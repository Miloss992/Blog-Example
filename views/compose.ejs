<%- include('partials/header') %>
    <div class="container">
        <div class="jumbotron p-5 mb-2 text-white rounded front">
            <div class="col-md-6 ">
                <h1 class="display-4 font-italic">Compose new post</h1>
                <p class="lead my-3"></p>
            </div>
        </div>

        <div class="container m-0 p-0">
            <div class="row ml-0" style="margin-left: 0px;">
                <div class="col-md-8 mb-3 blog-main bg-light rounded">
                    <hr class="pb-3 mt-3">
                    <div class="blog-post">
                        <div class="mb-4">
                            <form action="/compose" method="post" name="composePost">
                                <div class="form-group">
                                    <label for="PostTitle">Title</label>
                                    <input type="text" class="form-control" name="postTitle" maxlength="24"
                                        placeholder="Enter Title here." required>
                                </div>
                                <div class="form-group">
                                    <label for="category">Category</label>
                                    <select name="category" class="form-control" required>
                                        <option value="Category1">Category1</option>
                                        <option value="Category2">Category2</option>
                                        <option value="Category3">Category3</option>
                                        <option value="Category4">Category4</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="PostTitle">Author</label>
                                    <input type="text" class="form-control" name="postAuthor" maxlength="24"
                                        placeholder="Enter Autor here." required>
                                </div>
                                <div class="form-group">
                                    <label for="PostTitle">Header image</label>
                                    <input type="text" class="form-control" name="postImg" maxlength="24"
                                        placeholder="Enter link to header image." required>
                                </div>
                                <div class="form-group">
                                    <label for="PostContext">Compose your post</label>
                                    <textarea class="form-control" name="postContext" rows="6"
                                        placeholder="Enter your post here." required></textarea>
                                </div>
                                <button type="submit" class="btn btn-primary">Publish</button>
                            </form>
                        </div>
                    </div>
                </div>
                <aside class="col-md-4 blog-sidebar">
                    <div class="p-3 mb-3 bg-light rounded">
                        <h4 class="font-italic">About</h4>
                        <p class="mb-0">This is a sample blog format.
                            All data is for educational purposes.
                        </p>
                    </div>
                    <div class=" bg-light rounded">
                        <div class="p-3 ">
                            <h4 class="font-italic">Latest News</h4>
                            <ol class="list-unstyled mb-0">
                                <li><a href="/posts/<%=last10[0]%>">
                                        <%=last10[0]%>
                                    </a></li>
                                <li><a href="/posts/<%=last10[1]%>">
                                        <%=last10[1]%>
                                    </a></li>
                                <li><a href="/posts/<%=last10[2]%>">
                                        <%=last10[2]%>
                                    </a></li>
                                <li><a href="/posts/<%=last10[3]%>">
                                        <%=last10[3]%>
                                    </a></li>
                                <li><a href="/posts/<%=last10[4]%>">
                                        <%=last10[4]%>
                                    </a></li>
                                <li><a href="/posts/<%=last10[5]%>">
                                        <%=last10[5]%>
                                    </a></li>
                                <li><a href="/posts/<%=last10[6]%>">
                                        <%=last10[6]%>
                                    </a></li>
                                <li><a href="/posts/<%=last10[7]%>">
                                        <%=last10[7]%>
                                    </a></li>
                                <li><a href="/posts/<%=last10[8]%>">
                                        <%=last10[8]%>
                                    </a></li>
                                <li><a href="/posts/<%=last10[9]%>">
                                        <%=last10[9]%>
                                    </a></li>
                            </ol>
                        </div>
                    </div>
                </aside>
            </div>
        </div>
    </div>
    <%- include('partials/footer') %>